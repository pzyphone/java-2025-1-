/*Escrever um programa que leia o nome de um 
 aluno e as notas das três provas que ele obteve
 no semestre. No final informar o nome do aluno 
 e a sua média (aritmética).*/
 
 import java.util.Scanner;
 
 
 public class CalcularMedia {
     public static void main(String[] args) {
         double n1, n2, n3, media;
         String nome;
 
         Scanner sc = new Scanner(System.in);
         System.out.print("Digite seu nome: ");
         nome = sc.nextLine();
         System.out.println("Digite a nota da primeira prova: ");
         n1 = sc.nextInt();
         System.out.println("Digite a nota da segunda prova: ");
         n2 = sc.nextInt();
         System.out.println("Digite a nota da terceira prova: ");
         n3 = sc.nextInt();
         media = (n1 + n2 + n3)/3;
         System.out.println("Aluno: " + nome);
         System.out.println("A média da sua nota é: "+ media);
         sc.close();
     }
 
 } /*Faça um programa que imprima em ordem 
 crescente todos os números entre 100 e 200. 
 Utilize laço "enquanto".*/        
 
 public class Contagem100a200 {
 
         public static void main(String[] args) {
                 int contagem = 100;
                 while (contagem < 201) {
                         System.out.println(contagem);
                         contagem++;
                 }
         }
 
 } /*Faça um programa que imprima em ordem 
 decrescente todos os números entre 40 e 20. 
 Utilize laço "Para" e outras estruturas que 
 julgar necessárias.*/
 
 public class Decrecente40a20 {
         public static void main(String[] args) {
 
                 for(int i = 40; i >= 20; i-- ){
                         System.out.println("Contagem: " +i);
                 }
         }
 
 } /*Ler dois valores para as variáveis A e B, e 
 efetuar as trocas dos valores de forma que a 
 variável A passe a possuir o valor da variável 
 B e a variável B passe a possuir o valor da 
 variável A. Apresentar os valores trocados.*/
 import java.util.Scanner;
 
 public class InverterValores {
     public static void main(String[] args) {
         int a, b, invetA, invertB;
         Scanner sc = new Scanner(System.in);
         System.out.print("Digite um numero inteiro para A: ");
         a = sc.nextInt();
         System.out.println("Digite um numero inteiro para B: ");
         b = sc.nextInt();
         sc.close();
         invetA = b;
         invertB = a;
         System.out.println("O numero invertido de A: " + invetA);
         System.out.println("O numero invertido de B: " + invertB);
     }
 
 } /*Ler dois valores para as variáveis A e B, e 
 efetuar as trocas dos valores de forma que a 
 variável A passe a possuir o valor da variável 
 B e a variável B passe a possuir o valor da 
 variável A. Apresentar os valores trocados.*/
 import java.util.Scanner;
 
 public class InverterValores {
     public static void main(String[] args) {
         int a, b, invetA, invertB;
         Scanner sc = new Scanner(System.in);
         System.out.print("Digite um numero inteiro para A: ");
         a = sc.nextInt();
         System.out.println("Digite um numero inteiro para B: ");
         b = sc.nextInt();
         sc.close();
         invetA = b;
         invertB = a;
         System.out.println("O numero invertido de A: " + invetA);
         System.out.println("O numero invertido de B: " + invertB);
     }
 
 } /*Escreva um Algoritmo para demonstrar as 
 operações matematicas basicas e mostre 
 o resultado para cada operador.*/
 
 public class OperaçõesMath {
     public static void main(String[] args) {
         int som, div, mult, sub;
 
         som = 12 + 3;
         sub = 7 - 2;
         div = 24 / 3;
         mult = 3 * 4;
 
         System.out.println("A soma de 12 + 3 é igual: " + som);
         System.out.println("A subtração de 7 - 2 é igual: " + sub);
         System.out.println("A divisão de 24 / 3 é igual: " +  div);
         System.out.println("A multiplicação de 3 x 4 é igual: " + mult);
 
     }
 
 } /*Escreva um Algoritmo para demonstrar as 
 operações matematicas basicas e mostre 
 o resultado para cada operador.*/
 
 public class OperaçõesMath {
     public static void main(String[] args) {
         int som, div, mult, sub;
 
         som = 12 + 3;
         sub = 7 - 2;
         div = 24 / 3;
         mult = 3 * 4;
 
         System.out.println("A soma de 12 + 3 é igual: " + som);
         System.out.println("A subtração de 7 - 2 é igual: " + sub);
         System.out.println("A divisão de 24 / 3 é igual: " +  div);
         System.out.println("A multiplicação de 3 x 4 é igual: " + mult);
 
     }
 
 } /*Escrever um programa que leia o nome de um 
 vendedor, o seu salário fixo e o total de 
 vendas efetuadas por ele no mês (em dinheiro).
 Sabendo que estevendedor ganha 15% de comissão 
 sobre suas vendas efetuadas, informar o seu 
 nome, o salário fixo e salário no final do mês.*/
 import java.util.Scanner;
 
 public class SalarioVendedor {
     public static void main(String[] args) {
         String nome;
         double salario, vendas, salariofinal;
         Scanner sc = new Scanner(System.in);
         System.out.print("Digite o nome do funcionário: ");
         nome = sc.nextLine();
         System.out.println("Digite o valor do salário: ");
         salario = sc.nextInt();
         System.out.println("Digite o valor das vendas: ");
         vendas = sc.nextInt();
         sc.close();
 
         salariofinal = (vendas * 0.15) + salario;
 
         System.out.println("Funcionário: "+ nome);
         System.out.println("Salário final é: " + salariofinal);
     }
 
 } /*Faça um programa que imprima todos os 
 resultados da tabuada de 5. Utilize laço "enquanto" 
 e outras estruturas que julgar necessárias.*/
 
 
 public class Tabuada {
         public static void main(String[] args) {
                 int num, cont, result;
                 num = 5;
                 cont = 1;
                 while (cont <= 10) {
                         result = num * cont;
                         System.out.println(num + " x " + cont + " = " + result);
                         cont++;
                 }
         }
 
 } /*Escreva um Algoritmo que receba 4 valores 
 em variáveis diferentes,  contendo INTEIRO, 
 REAL, CARACTERE e BOOLEANO e mostre na tela  
 os valores atribuídos às variáveis.*/
 
 public class TiposVariaveis {
     public static void main(String [] args) {
         int inteiro = 4;
         double decimal = 5.73;
         String nome = "Otavio";
         boolean booleana = true;
 
         System.out.println(inteiro);
         System.out.println(decimal);
         System.out.println(nome);
         System.out.println(booleana);
     }
 
 }
